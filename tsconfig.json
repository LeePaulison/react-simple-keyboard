{
  "compilerOptions": {
    "noImplicitAny": true,
    "outDir": "build",
    "module": "esnext",
    "target": "es5",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["es2020", "dom"],
    "moduleResolution": "node",
    "downlevelIteration": true,
    "jsx": "react",
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/lib"],
  "exclude": [
    "src/lib/**/tests",
    "node_modules/@types/enzyme/**",
    "node_modules/@types/node/ts5.6/**",
    "**/node_modules/@types/react/**"
  ]
}
